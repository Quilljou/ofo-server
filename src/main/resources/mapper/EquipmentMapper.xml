<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.senninha.db.mapper.EquipmentDao" >

    <select id="selectByStationId" parameterType="int" resultType="Equipment">
        SELECT
        *
        FROM equipment
        WHERE station_id = #{stationId}
    </select>

    <select id="selectOne" parameterType="int" resultType="Equipment">
        SELECT
        *
        FROM equipment
        WHERE id = #{id}
    </select>

    <select id="selectByStationIdAndEquipmentCode"  parameterType="map" resultType="Equipment">
        SELECT
        *
        FROM equipment
        WHERE station_id = #{stationId} AND equipment_code = #{equipmentCode}
    </select>


    <insert id="insert" parameterType="Equipment" keyProperty="id">
        INSERT INTO equipment (name, station_id, module_count, equipment_code)
        VALUES (#{name}, #{stationId}, #{moduleCount}, #{equipmentCode})
    </insert>

    <update id="update" keyProperty="id" parameterType="Equipment">
        UPDATE
            equipment
        SET
            name = #{name},
            equipment_code = #{equipmentCode},
            module_count = #{moduleCount}
        WHERE
            id = #{id}
    </update>


</mapper>