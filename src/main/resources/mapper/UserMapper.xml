<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.senninha.db.mapper.UserDao" >
    <select id="selectAll" resultType="User"  >
        SELECT
        id,
        username,
        location,
        last_login_time,
        is_root,
        phone
        FROM user
    </select>
    <select id="selectById" resultType="User"  >
        SELECT
        id,
        username,
        location,
        last_login_time,
        is_root,
        phone
        FROM user
        WHERE id = #{id}


    </select>

    <select id="selectOne" parameterType="int" resultType="User" >
        SELECT
         id,
        username,
        location,
        last_login_time,
        is_root,
        phone
        FROM user
        WHERE id = #{id}
    </select>

    <select id="selectByName" parameterType="User" resultType="User" >
        SELECT * FROM user
        WHERE username = #{username}
    </select>
        <select id="getPasswordByUsername" parameterType="User" resultType="User" >
            SELECT password FROM user
            WHERE username = #{username}
        </select>

    <insert id="insert" parameterType="User" keyProperty="id">
        INSERT INTO user (username,password,location,is_root,phone)
        VALUES (#{username}, #{password}, #{location}, 0, #{phone})
    </insert>

    <update id="update" parameterType="User" >
        UPDATE
        user
        <set>
            <if test="location!=null">
                location = #{location},
            </if>
            <if test="phone!=null">
                phone = #{phone},
            </if>
            <if test="password!=null">
                password=#{password}
            </if>
        </set>

        WHERE
        id = #{id}
    </update>

    <update id="initAdmin" parameterType="User" >
        INSERT INTO user (username,password,is_root)
        VALUES (#{username}, #{password}, #{isRoot})
    </update>

    <select id="isInitedAdmin" resultType="User"  >
        SELECT * FROM user
        WHERE
        is_root = #{isRoot}
    </select>

    <update id="updateLastLoginTime" parameterType="User" >
        UPDATE user SET
        last_login_time = #{lastLoginTime, jdbcType=TIMESTAMP}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="int" >
        DELETE FROM
        user
        WHERE
        id =#{id}
    </delete>

</mapper>